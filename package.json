{
  "name": "verity-ui",
  "version": "0.1.0",
  "description": "handle ui",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn --cwd example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/fercho343/verity-ui",
  "author": "Fernando Lopez <fernandojalope343@icloud.com> (https://github.com/fercho343)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fercho343/verity-ui/issues"
  },
  "homepage": "https://github.com/fercho343/verity-ui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/netinfo": "^11.2.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/apollo-upload-client": "^17.0.5",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.70.0",
    "apollo-upload-client": "^17.0.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "i18next": "^23.7.7",
    "lottie-react-native": "^6.4.1",
    "react": "18.2.0",
    "react-auth-code-input": "^3.2.1",
    "react-hook-form": "^7.48.2",
    "react-native": "0.72.6",
    "react-native-builder-bob": "^0.20.0",
    "react-native-confirmation-code-field": "^7.3.2",
    "react-native-paper": "^5.11.3",
    "react-native-toast-message": "^2.1.8",
    "release-it": "^15.0.0",
    "styled-components": "^6.1.1",
    "typescript": "^5.0.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
